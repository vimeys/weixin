/* pages/shopOut_restock/shopOut_restock.wxss */
.container{
    font-size: 28rpx;
    color:#333;
}
.list{
    width: 100%;
    border-bottom: 1rpx solid #ccc;
    display: flex;
    padding-top: 30rpx;
}
.img{
    padding-left: 20rpx;
    width: 270rpx;
    flex: initial;
}
image{
    width:250rpx;
    height: 178rpx;
}
.table{
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    flex:1;
    font-size: 24rpx;
    line-height:44rpx;
    position: relative;
}
.table .title{
    font-size: 28rpx;
    margin-bottom: 10rpx;

}
.table input{
    display: inline-block;
    border: 1rpx solid #333333;
    width: 80rpx;
    height: 38rpx;
    color:#FF0202;
    vertical-align: middle;
    font-size: 28rpx;
    min-height: 38rpx;
    padding-left: 5rpx;
    box-sizing: border-box;
}
.table .last{
    line-height: 44rpx;
}
.table .last text:first-child{
    display: inline-block;
    width:120rpx;
    margin-right: 100rpx;
}
.table .end text:first-child{
    color:red;
    display: inline-block;
    width: 120rpx;
    /* text-align: left; */
    margin-right: 100rpx;
    /*margin-left: 100rpx;*/
}
.table image{
    width: 46rpx;
    height: 46rpx;
    position: absolute;
    right: 20rpx;
    top: 5rpx;
}
.method{
    width: 100%;
    height: 40rpx;
    display: flex;
    align-items: center;
    margin-top: 70rpx;
    padding-left: 40rpx;
    font-size: 24rpx;
    margin-bottom: 150rpx;
}
.method .big{
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
    border: 5rpx solid #1caba2;
    border-radius: 25rpx;
    position:relative;
    margin-right: 20rpx;
}
.method .left{
    margin-left: 80rpx;
}
.method .small{
    position: absolute;
    top:10rpx;
    width: 20rpx;
    height: 20rpx;
    left: 10rpx;
    background: #1caba2;
    border-radius: 10rpx;
}
.add{
    display: inline-block;

    width: 200rpx;
    height: 60rpx;
    text-align: center;
    color:white;
    font-size: 32rpx;
    background: #1caba2;
    line-height: 60rpx;
    margin-left: 275rpx;
    margin-top: 20rpx;
    margin-bottom: 120rpx;
}
.fix{
    width: 100%;
    color:white;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    font-size: 32rpx;
    background: #1caba2;
    position: fixed;
    bottom:0;
}