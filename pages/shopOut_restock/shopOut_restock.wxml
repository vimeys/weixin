<!--pages/shopOut_restock/shopOut_restock.wxml-->
<view class="container">
    <block wx:for="{{Data}}" wx:for-item="item">
        <view class="list">
            <view class="img">
                <image src="../images/scan.png"></image>
            </view>
            <view class="table">
                <view class="title">超级好看的鞋子</view>
                <view>款号：<text>45574543156</text></view>
                <view>条码号：<text>461646164164</text></view>
                <view class="last">
                    尺码：<text>L</text>颜色：<text>大红色</text>
                </view>
                <view class="end">
                    单价：<text>￥9999.00</text>数量：<input type="number" value=""/>
                </view>
                <image src="../images/delete.png"></image>
            </view>
        </view>
    </block>

    <view class="method">
        <view class="big" bindtap="chooseStyle" data-type="1">
            <view class="{{choose==1?'small':''}}"></view>
        </view>
        销售出库
        <view class="big left" bindtap="chooseStyle" data-type="2">
            <view class="{{choose==2?'small':''}}"></view>
        </view>
        调货出库
        <view class="big left" bindtap="navTo" data-type="3">
            <view></view>
        </view>
        退货出库
    </view>
    <view class="add" url="../strageOutput/strageOutput">继续添加</view>
    <view class="fix" bindtap="confirm" data-type="{{choose}}"wx:if="{{confirm}}">确认</view>
    <view class="fix" bindtap="express" data-type="{{choose}}"wx:if="{{express}}">确认并填写发货单</view>
</view>
