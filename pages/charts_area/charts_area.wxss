    top:0rpx;
}
.shop .addr{
    display: inline-block;
    width: 200rpx;
    height: 46rpx;
    padding-left: 10rpx;
    padding-top: 5rpx;
    box-sizing: border-box;
    border: 1rpx solid #ccc;
    margin-left: 10rpx;
    position: relative;
    font-size: 24rpx;
    /*vertical-align: -14rpx;*/
