/* pages/storage_change/storage_change.wxss */
.time{
    width: 100%;
    padding-left: 20rpx;
    border-bottom:10rpx solid #e5e5e5;
    position: relative;
    margin-top: 20rpx;
}
.timeStart{
    display: inline-block;
    width: 330rpx;
    height: 46rpx;
    border: 1rpx solid #ccc;
    position:relative;
    color:#ccc;
    font-size: 28rpx;
    padding-left: 10rpx;
    box-sizing: border-box;
    margin-bottom: 30rpx;
}
.time text{
    line-height: 46rpx;
    display: inline-block;
    /*vertical-align: 12rpx;*/
}
.time .timeStart::before{
    position: absolute;
    color:#333;
    content:"▼";
    right:15rpx;
    top:0rpx;
}
.express{
    width: 96%;
    font-size: 30rpx;
    position: relative;
    display: inline-block;
    margin-top: 20rpx;
    margin-bottom: 30rpx;
}
.express input{
    min-height: 46rpx;
    height: 46rpx;
    vertical-align: -15rpx;
}
.express .codeInput{
    display: inline-block;
    width: 300rpx;
    margin-left: 10rpx;
}
.express .codeInput input{
    display: inline-block;
    border: 1px solid #ccc;
    vertical-align: -15rpx;
}
.express .input{
    display: inline-block;
    position: relative;
    margin-left: 7rpx;
    width: 200rpx;
    height: 46rpx;
    border: 1rpx solid #ccc;
    padding-top: 5rpx;
    padding-left: 5rpx;
    box-sizing: border-box;

}
.express .input::before{
    position: absolute;
    color:#333;
    content:"▼";
    right:15rpx;
    top:5rpx;
}

.shop{
    display: inline-block;
    float:right;
}
.shop .input{
    border: 1px solid #ccc;
}
.list{
    border-bottom: 1px solid #e5e5e5;
    position: relative;
    padding: 10rpx;
}
.list .order{
    font-size: 30rpx;
    margin-bottom: 20rpx;
}
.list .red{
    color:red;
    position: absolute;
    font-size: 25rpx;
    top:5px;
    right: 20rpx;
}
.list .orderTime{
    font-size: 25rpx;
}