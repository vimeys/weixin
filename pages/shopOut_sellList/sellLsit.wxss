/* pages/shopOut_sellList/sellLsit.wxss */
.list{
    width: 100%;
    border-bottom: 1rpx solid #ccc;
    display: flex;
    padding-top: 30rpx;
}
.img{
    padding-left: 20rpx;
    width: 270rpx;
    flex: initial;
}
image{
    width:250rpx;
    height: 178rpx;
}
.table{
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    flex:1;
    font-size: 24rpx;
    line-height:44rpx;
    position: relative;
}
.table .title{
    font-size: 28rpx;
    margin-bottom: 10rpx;

}
.table input{
    display: inline-block;
    border: 1rpx solid #ccc;
    width: 80rpx;
    height: 38rpx;
    color:#FF0202;
    vertical-align: middle;
    font-size: 28rpx;
    min-height: 38rpx;
    padding-left: 5rpx;
    box-sizing: border-box;
}
.table .last{
    line-height: 44rpx;
}
.table .last text:first-child{
    margin-right: 220rpx;
}
.table .end text:first-child{
    color:red;
    display: inline-block;
    width: 225rpx;
    text-align: left;
    /*margin-left: 100rpx;*/
}
.table .end text:last-child{
    color:red;
}
.total{
    font-size: 30rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
}
.total view{
    line-height: 60rpx;
    height: 60rpx;
}
.total view:first-child text{
    color:#fd0400;
}
.total view:nth-child(2) text{
    color:#fd0400;
}
.total text{
    float:right;
}
.fix{
    width: 100%;
    color:white;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    font-size: 32rpx;
    background: #1caba2;
    position: fixed;
    bottom:0;
}