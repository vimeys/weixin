/* pages/shopOut_return/shopOut_return.wxss */
.num{
    font-size: 30rpx;
    padding-left: 20rpx;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
    border-bottom: 10rpx solid #e5e5e5;
}
.list{
    width: 100%;
    border-bottom: 1rpx solid #ccc;
    display: flex;
    padding-top: 30rpx;
}
.img{
    padding-left: 20rpx;
    width: 270rpx;
    flex: initial;
}
image{
    width:250rpx;
    height: 178rpx;
}
.table{
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    flex:1;
    font-size: 24rpx;
    line-height:44rpx;
    position: relative;
}
.table .title{
    font-size: 28rpx;
    margin-bottom: 10rpx;

}
.table input{
    display: inline-block;
    border: 1rpx solid #ccc;
    width: 80rpx;
    height: 38rpx;
    color:#FF0202;
    vertical-align: middle;
    font-size: 28rpx;
    min-height: 38rpx;
    padding-left: 5rpx;
    box-sizing: border-box;
}
.table .last{
    line-height: 44rpx;
}
.table .last text:first-child{
    margin-right: 220rpx;
}
.table .end text:first-child{
    color:red;
    display: inline-block;
    width: 225rpx;
    text-align: left;
    /*margin-left: 100rpx;*/
}
.table image{
    width: 46rpx;
    height: 46rpx;
    position: absolute;
    right: 20rpx;
    top: 5rpx;
}
.total{
    margin-top: 30rpx;
    padding-bottom: 20rpx;
    border-bottom: 10rpx solid #ccc;
    padding-left: 20rpx;
}
.total text{
    margin-left: 450rpx;
}
textarea{
    width: 666rpx;
    height: 200rpx;
    border: 1rpx solid #ccc;
    margin: 40rpx  auto 100rpx;
    padding-left: 20rpx;
    padding-top: 20rpx;
    font-size: 30rpx;
}